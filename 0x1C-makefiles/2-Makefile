.PHONY: all clean

# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

# Default target
all: $(NAME)

# Link object files to create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compile .c files to .o files
%.o: %.c
	$(CC) -c $< -o $@

clean:
	rm -f $(OBJ) $(NAME)